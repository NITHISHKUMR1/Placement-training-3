public class EvenDigitSum {
    public static void main(String[] args) {
        int[] arr = {12, 35, 44, 19};

        for (int i = 0; i < arr.length; i++) {
            if (digitSum(arr[i]) % 2 == 0)
                System.out.print(arr[i] + " ");
        }
    }

    static int digitSum(int n) {
        int sum = 0;
        while (n > 0) {
            sum += n % 10;
            n /= 10;
        }
        return sum;
    }
}
